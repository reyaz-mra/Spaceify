    <section id="blog" style="margin-top: 12rem;">
        <h2 style="font-size:6rem; text-align:center; margin-bottom:4rem" >Your Posts</h2>
        <% blogs.forEach(function(blog){ %>
          <div class="blog-box">
            <div class="blog-image">
              <img src="<%=blog.img%>" alt="Blog">
            </div>
            <div class="blog-details">
              <h4><%=blog.title%></h4>
              <p><%=blog.notes.substring(0,150)%></p>
              <a href="/post/<%=blog._id%>">Continue reading</a><br><br>
              <a href="/edit/<%=blog._id%>" title="Edit" style="font-size: 2.1rem;"><i class="fa-solid fa-pen-to-square"></i></a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <a href="/delete/<%=blog._id%>" title="Delete" onclick="return confirm('Are you sure you want to delete');" style="color: red; font-size: 2.1rem;"><i class="fa-solid fa-trash-can"></i></a>
            </div>
          </div>
          <% }) %>
          
        </section>










